{
    "AppSettings": {
        "Version": "1.2.20"
    },
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Debug",
            "System": "Warning",
            "Hangfire": "Warning",
            "Microsoft": "Warning",
            "Microsoft.Extensions.Diagnostics.HealthChecks": "Warning",
            "SixLabors.ImageSharp.Web.Middleware.ImageSharpMiddleware": "Warning",
            "Microsoft.Extensions.Http": "Warning",
            "System.Net.Http.HttpClient": "Warning"
        }
    },
    "ConnectionStrings": {
        "PushSubscriptionSqliteDatabase": "Filename=./dev_push_subscriptions.db"
    },
    "HealthChecksUI": {
        "HealthChecks": [
            {
                "Name": "PodNoms Health Check UI",
                "Uri": "https://localhost:5001/hc"
            }
        ],
        "Webhooks": [],
        "EvaluationTimeOnSeconds": 10,
        "MinimumSecondsBetweenFailureNotifications": 60
    },
    "HelpersSettings": {
        "Downloader": "/usr/local/bin/youtube-dl"
    },
    "StorageSettings": {
        "CdnUrl": "https://podnomscdn.blob.core.windows.net/",
        "ImageUrl": "https://cdn-l.podnoms.com/",
        "DefaultUserQuota": 5368709120,
        "DefaultEntryCount": 10
    },
    "ImageFileStorageSettings": {
        "ContainerName": "images",
        "MaxUploadFileSize": 10485760,
        "AllowedFileTypes": [".jpg", ".jpeg", ".png"]
    },
    "AudioFileStorageSettings": {
        "ContainerName": "audio",
        "MaxUploadFileSize": 4194304000,
        "AllowedFileTypes": [".mp3", ".m4a", ".wav"]
    },
    "JwtIssuerOptions": {
        "Issuer": "podnomsApi",
        "Audience": "https://api.podnoms.com/"
    },
    "EmailSettings": {
        "ApiBaseUri": "https://api.mailgun.net/v3/",
        "RequestUri": "mg.podnoms.com/messages",
        "From": "PodNoms Robot <info@podnoms.com>"
    }
}

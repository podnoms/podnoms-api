    "WaveformDataFileStorageSettings": {
        "ContainerName": "waveforms"
    },
    "AudioFileStorageSettings": {
        "ContainerName": "audio",
        "MaxUploadFileSize": 4194304000,
        "AllowedFileTypes": [".mp3", ".m4a", ".wav"]
    },
    "StorageSettings": {
        "CdnUrl": "https://podnomscdn.blob.core.windows.net/",
